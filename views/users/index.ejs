<%- include('../partials/header') %>
    <div class="container">
        <% if (contributor && contributor.role === 'Admin') { %>
            <a href="/users/add" class="btn-small left">Add User</a>
            <% }; %>
        <div class="row">
            <div id="users" class="col s12 cards-container">
                <% users.forEach(function(user) { %>
                    <div class="card blue-grey darken-1">
                        <div class="card-title">
                            <img class="responsive-img circle" src="<%=user.avatar %>">
                        </div>
                        <div class="card-content white-text">
                            <span class="card-title"><%= user.name %></span>
                            <p>
                                <%= user.email %>
                            </p>
                            <div class="card-action">
                                <span class="badge blue-grey lighten-1 white-text">
                                    <%if (user.active === false){ %>
                                        In-Active<br/>
                                    <% } else { %>
                                    <%= user.role %>
                                    <% }; %></span>
                                <a href="/users/<%= user._id %>" class="btn-small">View User</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>